@model LoginModel

@{
    Layout = "_LayoutDeslogado"; //importa layout cahtml
    ViewData["Title"] = "Login";
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
        @TempData["MensagemErro"]
    </div>
}

@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
        @TempData["MensagemSucesso"]
    </div>
}
<br />

<form asp-controller="Login" asp-action="Entrar" method="post">
    <div class="form-group">
        <label for="login">Login</label>
        <input type="text" asp-for="Login" class="form-control" id="login"placeholder="Enter login">
        @Html.ValidationMessageFor(x => x.Login)
    </div>
    

    <div class="form-group">
        <label for="senha">Senha</label>
        <input type="password" asp-for="Senha" class="form-control" id="senha" placeholder="Senha">
        @Html.ValidationMessageFor(x => x.Senha)
    </div>
    
    <p class="mb-4 text-sm-center mx-auto">Esqueceu sua senha?
        <a asp-action="RedefinirSenha" asp-controller="Login" class="text-primary text-gradient font-weight-bold">Redefinir senha.</a>
    </p>



    <button type="submit" class="btn btn-primary btn-block">Entrar</button>
</form>

