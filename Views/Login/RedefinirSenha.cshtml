@model RedefinirSenhaModel

@{
    Layout = "_LayoutDeslogado"; //importa layout cshtml
    ViewData["Title"] = "Redefinir a senha";
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
        @TempData["MensagemErro"]
    </div>
}
<br />

<form asp-controller="Login" asp-action="EnviarLinkParaRedefinirSenha" method="post">
    <div class="form-group">
        <label for="login">Login</label>
        <input type="text" asp-for="Login" class="form-control" id="login" placeholder="Enter login">
        @Html.ValidationMessageFor(x => x.Login)
    </div>

    <div class="form-group">
        <label for="email">Email</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Email">
        @Html.ValidationMessageFor(x => x.Email)
    </div>
     
    <button type="submit" class="btn btn-primary btn-block">Redefinir Senha</button>
    </br><a class="btn btn-secondary" asp-controller="Login" asp-action="Index" role="button">Voltar</a>

</form>


